<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML/UI.xsd">

    <Frame name="TBEToyCountTemplate" inherits="InsetFrameTemplate3" parent="ToyBox" virtual="true">
        <Size x="130" y="18"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="$parent">
                <Offset><AbsDimension x="70" y="-22"/></Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="staticText" inherits="GameFontNormalSmall">
                    <Anchors>
                        <Anchor point="LEFT" x="10" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="uniqueCount" inherits="GameFontHighlightSmall" text="0">
                    <Anchors>
                        <Anchor point="RIGHT" x="-10" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="TBEToyUsableCountTemplate" inherits="TBEToyCountTemplate" parent="ToyBox" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="ToyBox">
                <Offset><AbsDimension x="70" y="-42"/></Offset>
            </Anchor>
        </Anchors>
    </Frame>

	<CheckButton name="ToyBoxEnhancedSpellButtonTemplate" inherits="CollectionsSpellButtonTemplate,SecureFrameTemplate,SecureActionButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				CollectionsSpellButton_OnLoad(self, ToySpellButton_UpdateButton)
			</OnLoad>
			<OnHide function="ToySpellButton_OnHide"/>
			<OnDragStart function="ToySpellButton_OnDrag"/>
			<OnReceiveDrag function="ToySpellButton_OnDrag"/>
		</Scripts>
        <Layers>
            <Layer level="OVERLAY">
                <Texture parentKey="IsHidden" hidden="true" file="Interface\BUTTONS\UI-GroupLoot-Pass-Up">
                    <Size x="36" y="36" />
                    <Anchors>
                        <Anchor point="CENTER" CENTER="LEFT" x="0" y="2" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
	</CheckButton>

    <Button name="TBEAchievementButtonTemplate" parent="ToyBox" virtual="true">
        <Size x="60" y="40"/>
        <Anchors>
            <Anchor point="Top" relativeTo="$parent">
                <Offset><AbsDimension x="0" y="-21"/></Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <!--bgLeft-->
                <Texture atlas="PetJournal-PetBattleAchievementBG">
                    <Size x="46" y="18"/>
                    <Anchors><Anchor point="Top" x="-56" y="-12"/></Anchors>
                </Texture>
                <!--bgRight-->
                <Texture atlas="PetJournal-PetBattleAchievementBG">
                    <Size x="46" y="18"/>
                    <Anchors><Anchor point="Top" x="55" y="-12"/></Anchors>
                    <TexCoords left="1" right="0" top="0" bottom="1" />
                </Texture>
                <!--hightlight-->
                <Texture parentKey="highlight" atlas="PetJournal-PetBattleAchievementGlow" hidden="true">
                    <Size x="240" y="40"/>
                    <Anchors><Anchor point="Center" x="0" y="0"/></Anchors>
                </Texture>
                <!--icon-->
                <Texture parentKey="icon" name="TBEAvIcon" file="Interface\AchievementFrame\UI-Achievement-Shields-NoPoints">
                    <Size x="30" y="30"/>
                    <Anchors><Anchor point="Right" x="0" y="-5"/></Anchors>
                    <TexCoords left="0" right="0.5" top="0" bottom="0.5" />
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="staticText" inherits="GameFontNormalLarge" maxLines="1" justifyH="LEFT">
                    <Size x="0" y="0" />
                    <Anchors>
                        <Anchor point="RIGHT" relativeTo="TBEAvIcon" relativePoint="LEFT" x="-4" y="4" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Button>
</Ui>
